@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<p>
    <a asp-action="Register" asp-controller="Account" asp-area="Idintity" 
       class="btn btn-sm btn-primary">Yeni Kullanıcı</a>
</p>
<table class="table" id="tblRecords">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>E-posta doğrulandı mı?</th>
            <th>Eylemler</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@(item.EmailConfirmed ? "Evet" : "Hayır")</td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a></td>
        </tr>
    }
</table>


